autocmd BufEnter * lcd %:p:h
map <C-E><C-W> :set wrap! lbr<CR>
map <C-Z> :buffers<CR>:buffer<Space>
map <C-F4> :bd<CR>
map <Leader>y "+y
map <C-K> <C-]>
map <C-S-tab> :bp<CR>
map <C-Space> :!
map <C-tab> :bn<CR>
map <Leader>d "+d
map <Leader>p "+p
map <Space> :
map <tab> :b #<CR>
set autoindent
set expandtab
set ignorecase
set incsearch
set number
set shiftwidth=4
set smartcase
set softtabstop=4
set tabstop=4
set ve=block
set visualbell
set backspace=indent,eol,start
